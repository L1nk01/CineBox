@model List<Application.ViewModels.SeriesViewModels.SeriesViewModel>

@{
    ViewData["Title"] = "Series";
}

<div class="container">
    <div class="d-grid mb-3">
        <a asp-controller="Series" asp-action="Create" class="btn btn-primary">Add a series</a>
    </div>

    <div class="column">
        @foreach (Application.ViewModels.SeriesViewModels.SeriesViewModel item in Model)
        {
            <div class="card mb-3" style="w-100;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="@item.ImageLink" class="img-fluid rounded-start" alt="@item.Name" style="width: auto; height: 100%; object-fit: cover">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body d-flex flex-column gap-3 h-100">
                            <div>
                                <h5 class="card-title">@item.Name</h5>
                                <p class="card-text">@item.Description</p>
                                <small class="text-muted">Producer: @item.ProducerName</small>
                            </div>
                            <div class="d-flex justify-content-between mt-auto">
                                <div class="d-inline-flex gap-1">
                                    <small class="bg-primary text-white rounded" style="padding: 4px 10px;">@item.PrimaryGenreName</small>
                                    @if (!string.IsNullOrEmpty(item.SecondaryGenreName))
                                    {
                                        <small class="bg-secondary text-white rounded m-0" style="padding: 4px 10px;">@item.SecondaryGenreName</small>
                                    }  
                                </div>
                                <div>
                                    <div class="btn-group">
                                        <a asp-controller="Series" asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                        <a asp-controller="Series" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>